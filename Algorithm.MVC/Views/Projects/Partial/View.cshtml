@model IEnumerable<ProjectVM>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
           @* <img src="@Url.Content(@Model.Photo)" alt="@Model.AlternateText" />*@
            @Html.DisplayNameFor(model => model.Project.Thumbnail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project.DesignState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project.AddToGallery)
        </th>
        
        <th>
            <input type="button" value="Design" class="glyphicon glyphicon-triangle-right">
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Project.Thumbnail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.DesignState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Project.AddToGallery)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Project.Id }) |
            @Html.ActionLink("Details", "Details", new { id= item.Project.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Project.Id })
        </td>
    </tr>
}

</table>
